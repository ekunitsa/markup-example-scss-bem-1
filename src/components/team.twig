{% set team = [
    {
        "name": "Brendon",
        "position": "CEO & Founder"
    }, {
        "name": "Jodi",
        "position": "Real Estate Developer"
    }, {
        "name": "Justin",
        "position": "Listing Agent"
    }, {
        "name": "Susan",
        "position": "Buyer's Agent"
    }
] %}

<section class="section section--margin team">
    <div class="container team__container">
        <div class="title__wrapper title__wrapper--center title__wrapper--margin-bottom-big">
            <div class="title__sub title__sub--blue">
                Introduce yourself to
            </div>

            <div class="title__main">
                <h2>Our Team of Experts</h2>
            </div>
        </div>

        <div class="team__list">
            {% for item in team %}
                <div class="team__item">
                    <div class="team__image">
                        {% include "./utils/picture.twig" with {
                            "path": "./img/", "name": "team-" ~ loop.index, "format": "jpg", "alt": item.name, "class": "team__img"
                        } %}
                    </div>

                    <div class="team__description">
                        <div class="team__name">
                            {{ item.name }}
                        </div>

                        <div class="team__position">
                            {{ item.position }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
