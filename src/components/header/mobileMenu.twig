<div class="mobile-menu js-mobile-menu">
    <div class="mobile-menu__header">
        <div class="mobile-menu__close">
            <svg width="24" height="21" focusable="false" class="mobile-menu__close-svg js-close-menu">
                <use href="./img/sprite.svg#close"></use>
            </svg>
        </div>
    </div>

    <div class="mobile-menu__container">
        <ul class="mobile-menu__ul">
            {% for item in menu %}
                <li class="mobile-menu__li">
                    <a href="{{ item.link }}" class="mobile-menu__link js-mobile-menu-link">{{ item.title }}</a>
                </li>
            {% endfor %}
        </ul>

        <div class="mobile-menu__buttons">
            <div class="mobile-menu__login">
                <svg width="18" height="18" focusable="false">
                    <use href="./img/sprite.svg#account"></use>
                </svg>
                <a href="#" class="mobile-menu__login-link">Login/Register</a>
            </div>

            <div class="mobile-menu__listing">
                <a href="#" class="btn btn-primary btn-center mobile-menu__listing-btn">
                    <svg width="20" height="20" focusable="false">
                        <use href="./img/sprite.svg#home"></use>
                    </svg>
                    Add Listing
                </a>
            </div>
        </div>
    </div>
</div>
